{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "globals": {
    "$": true,
    "sessionStorage": true,
    "window": true,
    "document": true
  },
  "rules": {
    "strict": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "babel/new-cap": 1,
    "babel/semi": 0,
    "semi": "off",
    "eol-last": "off",
    "react/forbid-prop-types": 0,
    "linebreak-style": "off",
    "class-method-use-this": 0,
    "arrow-body-style": [
      "warn",
      "as-needed"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "class-property"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  }
}